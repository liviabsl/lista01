#include <stdio.h>

int main(void)
{
    
   void questao07(void){
        float raio, diametro, perimetro, area;
        printf("Raio: ");
        scanf("%f", &raio);
      
      
        diametro = 2*raio;
        perimetro = 2 *3.14 * raio;
        area = 3.14 * (raio*raio);
     
        printf("Valor do diâmetro é de:  %f\n", diametro);
        printf("Valor do perimetro é de:  %f\n", perimetro);
        printf("Valor da area é de:  %f\n", area);
   }
      
      questao07();
    
}
